<html>
  <% include ./partials/header %>

  <body class="d-flex login-body">
    <div class="container d-flex justify-content-center  align-self-center ">
      <div class="card" style="width: 22rem;">
        <div class="card-body text-center">
          <h5 class="card-title pb-2 ">LOGIN</h5>

          <a href="/auth/google"
            ><button
              class="btn btn-lg btn-google btn-block btn-ggl mb-4"
              type="submit"
            >
              <i class="fab fa-google mr-2"></i> Sign in with Google
            </button>
          </a>
          <a href="/auth/facebook">
            <button
              class="btn btn-lg btn-facebook btn-block btn-fb mb-4"
              type="submit"
            >
              <i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook
            </button>
          </a>

          <h5 class="card-title pb-2 mb-4">LOGIN WITH EMAIL</h5>
          <%if(typeof flag === 'undefined'){%>
          <form action="/registerRedirect" method="POST">
            <% } else {%>
          <form action="/login" method="POST">
              <%}%>
            <div class=" form-group ">
              <input
                type="email"
                name="email"
                value="<%if(typeof email != 'undefined'){%><%=email%><%}%>"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                placeholder="Enter email"
                required
              />
              <%if(typeof flag != 'undefined'){%>
                <input type="password" name="password" class="form-control" id="exampleInputpwd" aria-describedby="emailHelp"
                  placeholder="Enter Password" />
              <%}%>
            </div>
            <a >
              <input type="submit" value="Continue" class="btn btn-block btn-lg btn-primary ">
             
            </input>
            </a>
          </form>
          <a href="#" style="color:black">Forgot Password</a>
        </div>
      </div>
    </div>
  </body>
</html>
